{{#if place}}
  <h3>{{place.name}}</h3>
<!--
Lat: {{place.geometry.location.lat}}
<br />
Long: {{place.geometry.location.lng}}
<br />
ID: {{place.place_id}}
<br />
city: -->
{{place.city}}, {{place.country}}
<br />
<form id="save-new-place">

  <input type="hidden" id="place_id" name="place[googlePlaceID]" value="{{place.place_id}}">
  <input type="hidden" id="place_name" name="place[name]" value="{{place.name}}">
  <input type="hidden" id="place_lat" name="place[lat]" value="{{place.geometry.location.lat}}">
  <input type="hidden" id="place_lng" name="place[lng]" value="{{place.geometry.location.lng}}">
  <input type="hidden" id="place_city" name="place[city]" value="{{place.city}}">
  <input type="hidden" id="place_country" name="place[country]" value="{{place.country}}">
  <input type="hidden" id="place_category" name="place[category]" value="interested">
  <input type="hidden" id="place_googleInfo" name="place[googleInfo]" value="{{place}}">


  <button type="submit" class="btn btn-info">Add to my places</button>
</form>
{{/if}}
